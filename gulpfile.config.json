{
	"targets": {
		"browser": {
			"compile": [{
				"input": "test/css/main.scss",
				"output": "docs/css/main.css",
				"minify": true
			}, {
				"input": "test/js/main.js",
				"output": "docs/js/main.js",
				"rollup": {
					"format": "umd",
					"globals": {
						"rxjs": "rxjs",
						"rxjs/operators": "rxjs.operators",
						"rxcomp": "rxcomp"
					},
					"external": ["rxjs", "rxcomp"]
				},
				"minify": true
			}],
			"bundle": []
		},
		"dist": {
			"compile": [{
				"input": "esdoc/css/esdoc.scss",
				"output": "esdoc/css/esdoc.css",
				"minify": true
			}, {
				"input": "src/rxcomp-form.js",
				"output": "dist/rxcomp-form.js",
				"rollup": {
					"name": "rxcomp-form",
					"format": "umd",
					"globals": {
						"rxjs": "rxjs",
						"rxjs/operators": "rxjs.operators",
						"rxcomp": "rxcomp"
					},
					"external": ["rxjs", "rxcomp"]
				},
				"minify": true
			}],
			"bundle": [],
			"docs": [{
				"input": "src/rxcomp-form.js",
				"output": "docs/api"
			}]
		}
	},
	"options": {
		"tfs": false,
		"server": {
			"src": "./docs",
			"fallback": "index.html",
			"path": "/rxcomp-form",
			"host": "localhost",
			"port": 40997
		}
	}
}
